<div class="container mx-auto mt-10">
  <h1 class="text-2xl font-bold mb-4">Employees</h1>

  <table class="table-auto w-full border-collapse border border-gray-300">
    <thead>
      <tr class="bg-gray-100">
        <th class="border border-gray-300 px-4 py-2">Employee ID</th>
        <th class="border border-gray-300 px-4 py-2">Name</th>
        <th class="border border-gray-300 px-4 py-2">Phone</th>
        <th class="border border-gray-300 px-4 py-2">Registered At</th>
        <th class="border border-gray-300 px-4 py-2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td class="border border-gray-300 px-4 py-2"><%= employee.employee_id %></td>
          <td class="border border-gray-300 px-4 py-2"><%= employee.name %></td>
          <td class="border border-gray-300 px-4 py-2"><%= employee.phone.presence || 'N/A' %></td>
          <td class="border border-gray-300 px-4 py-2"><%= employee.registered_at.strftime("%B %d, %Y %I:%M %p") if employee.registered_at? %></td>
          <td class="border border-gray-300 px-4 py-2">
            <%= link_to "Show", employee, class: "text-blue-500 hover:underline" %> | 
            <%= link_to "Edit", edit_employee_path(employee), class: "text-blue-500 hover:underline" %> |
            <%= link_to "Delete", employee, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'},  class: "text-red-500 hover:underline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-4">
    <%= link_to 'Register New Employee', new_employee_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
